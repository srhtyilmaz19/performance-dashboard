{
  "extends": [
    "airbnb",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "jsx-a11y/aria-role": [ 2, {
      "ignoreNonDOM": true
    }],
    "max-len": [
      "error",
      {
        "code": 80
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    // override configuration set by extending "eslint:recommended"
    "no-empty": "warn",
    "no-cond-assign": [
      "error",
      "always"
    ],
    // disable rules from base configurations
    "for-direction": "off"
  }
}
